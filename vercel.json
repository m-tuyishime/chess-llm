{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pip install -r requirements-server.txt && python build.py && npm run build",
  "outputDirectory": "website/client/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    }
  ],
  "functions": {
    "api/index.py": {
      "includeFiles": "data.json",
      "excludeFiles": [
        "data/storage.db",
        "tests/**",
        "scripts/**",
        "**/__pycache__/**",
        "**/*.pyc",
        "**/*.pyo",
        "**/*.test.py",
        "pytest.ini",
        "pyproject.toml",
        "requirements.txt",
        "uv.lock",
        "website/client/**/*.test.ts",
        "website/client/**/*.test.tsx"
      ]
    }
  },
  "env": {
    "CHESS_REPO_TYPE": "json",
    "CHESS_JSON_PATH": "data.json"
  }
}