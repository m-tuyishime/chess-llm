{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "uv pip install --system --link-mode=copy -r requirements-server.txt && python build.py && npm run build",
  "outputDirectory": "website/client/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    }
  ],
  "functions": {
    "api/index.py": {
      "includeFiles": "data.json",
      "excludeFiles": "data/storage.db"
    }
  },
  "env": {
    "CHESS_REPO_TYPE": "json",
    "CHESS_JSON_PATH": "data.json"
  }
}
