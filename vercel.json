{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "buildCommand": "pip install -r requirements-server.txt && python build.py && npm run build",
  "outputDirectory": "website/client/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    }
  ],
  "functions": {
    "api/index.py": {
      "includeFiles": "data.json",
      "excludeFiles": "{tests/**,scripts/**,__pycache__/**,*.pyc,*.pyo,*.test.py,pytest.ini,pyproject.toml,uv.lock,website/client/**/*.test.ts,website/client/**/*.test.tsx,data/storage.db}"
    }
  },
  "env": {
    "CHESS_REPO_TYPE": "json",
    "CHESS_JSON_PATH": "data.json"
  }
}
